#ifndef LED_H_
#define LED_H_

/*******************************************************************************
 *                                Includes                                     *
 *******************************************************************************/
#include "std_types.h"
#include "gpio.h"

/*******************************************************************************
 *                      Preprocessor Macros                                    *
 *******************************************************************************/
#define LED_ON		LOGIC_HIGH
#define LED_OFF 	LOGIC_LOW

/*******************************************************************************
 *                         Types Declaration                                   *
 *******************************************************************************/

typedef enum {
	LED_ERROR,LED_SUCCESS
}LED_FunctionState;


/*******************************************************************************
 *                      Functions Prototypes                                   *
 *******************************************************************************/
/*
 * Description :
 */
LED_FunctionState LED_setup(uint8 port_num, uint8 pin_num);


