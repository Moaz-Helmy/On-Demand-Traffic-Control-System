/*
 * Description :
 */
void app_start()
{
	setup_LEDs();
}
void setup_LEDs()
{
	uint8 pin_index=0;

	for(pin_index=0; pin_index<3; pin_index++)
	{
		LED_setup(CAR_LEDS_PORT_ID, pin_index);
		LED_setup(PEDESTRIANS_PORT_ID, pin_index);
	}
}
